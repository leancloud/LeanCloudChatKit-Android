<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/input_bar_layout_more"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/lcim_bottom_bar_motion_divider"
        android:focusable="false"/>

    <LinearLayout
        android:id="@+id/input_bar_layout_emotion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lcim_bottom_bar_motion_layout_height"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/input_bar_viewpager_emotin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <include layout="@layout/lcim_bottom_bar_action_layout"/>
</LinearLayout>